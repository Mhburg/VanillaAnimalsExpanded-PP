<?xml version='1.0' encoding='utf-8' ?>
<Patch>

  <Operation Class='PatchOperationSequence'>
    <success>Always</success>

    <operations>
      <!-- Check for CE & VAE -->
      <li Class='ModCheck.isModLoaded'>
        <modName>Combat Extended</modName>
      </li>

      <li Class='ModCheck.isModLoaded'>
        <modName>Vanilla Animals Expanded â€” Desert</modName>
      </li>

      <!-- Desert Tortoise -->
      <li Class='PatchOperationAdd'>
          <xpath>Defs/ThingDef[defName = 'AEXP_DesertTortoise']/statBases</xpath>

          <value>
            <MeleeDodgeChance>0.02</MeleeDodgeChance>
            <MeleeCritChance>0.01</MeleeCritChance>
            <MeleeParryChance>0.05</MeleeParryChance>
          </value>
        </li>

        <li Class='PatchOperationReplace'>
          <xpath>Defs/ThingDef[defName = 'AEXP_DesertTortoise']/tools</xpath>

          <value>
            <tools>
              <li Class='CombatExtended.ToolCE'>
                <label>beak</label>
                <capacities>
                  <li>Bite</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>TurtleBeakAttackTool</linkedBodyPartsGroup>
                <armorPenetrationSharp>0.64</armorPenetrationSharp>
                <armorPenetrationBlunt>0.5</armorPenetrationBlunt>
              </li>

              <li Class="CombatExtended.ToolCE">
                <label>head</label>
                <capacities>
                  <li>Blunt</li>
                </capacities>
                <power>1</power>
                <cooldownTime>1.4</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <armorPenetrationBlunt>0.1</armorPenetrationBlunt>
              </li>
            </tools>
          </value>
        </li>
    </operations>
  </Operation>
</Patch>