<?xml version='1.0' encoding='utf-8' ?>
<Patch>

  <Operation Class='PatchOperationSequence'>

    <operations>
      <!-- Check for CE & VAE -->
      <li Class='ModCheck.isModLoaded'>
        <modName>Combat Extended</modName>
      </li>

      <li Class='ModCheck.isModLoaded'>
        <modName>Vanilla Animals Expanded — Vanilla Animals Expanded — Tropical Rainforest</modName>
      </li>

      <!-- Mandrill -->
      <li Class='PatchOperationAdd'>
        <xpath>Defs/ThingDef[defName = 'AEXP_Mandrill']/statBases</xpath>

        <value>
          <MeleeDodgeChance>0.15</MeleeDodgeChance>
          <MeleeCritChance>0.04</MeleeCritChance>
          <MeleeParryChance>0.02</MeleeParryChance>
        </value>
      </li>

      <li Class='PatchOperationReplace'>
        <xpath>Defs/ThingDef[defName = 'AEXP_Mandrill']/tools</xpath>

        <value>
          <tools>
            <li Class="CombatExtended.ToolCE">
              <label>left fist</label>
              <capacities>
                <li>Blunt</li>
              </capacities>
              <power>3</power>
              <cooldownTime>1</cooldownTime>
              <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
              <armorPenetrationBlunt>0.9</armorPenetrationBlunt>
            </li>

            <li Class="CombatExtended.ToolCE">
              <label>right fist</label>
              <capacities>
                <li>Blunt</li>
              </capacities>
              <power>3</power>
              <cooldownTime>1</cooldownTime>
              <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
              <armorPenetrationBlunt>0.9</armorPenetrationBlunt>
            </li>

            <li Class="CombatExtended.ToolCE">
              <capacities>
                <li>Bite</li>
              </capacities>
              <power>5</power>
              <cooldownTime>1.2</cooldownTime>
              <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
              <chanceFactor>0.7</chanceFactor>
              <armorPenetrationSharp>0.02</armorPenetrationSharp>
              <armorPenetrationBlunt>0.576</armorPenetrationBlunt>
            </li>

            <li Class="CombatExtended.ToolCE">
              <label>head</label>
              <capacities>
                <li>Blunt</li>
              </capacities>
              <power>2</power>
              <cooldownTime>1.3</cooldownTime>
              <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
              <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
              <chanceFactor>0.2</chanceFactor>
              <armorPenetrationBlunt>0.3</armorPenetrationBlunt>
            </li>
          </tools>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>