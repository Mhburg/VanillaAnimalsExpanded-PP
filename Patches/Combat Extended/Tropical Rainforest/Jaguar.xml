        <xpath>Defs/ThingDef[defName = 'AEXP_Jaguar']/statBases</xpath>

        <value>
          <MeleeDodgeChance>0.26</MeleeDodgeChance>
          <MeleeCritChance>0.20</MeleeCritChance>
